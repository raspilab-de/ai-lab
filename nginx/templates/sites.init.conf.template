# INIT: Only HTTP + ACME challenge (no SSL yet)
server {
  listen 80;
  server_name
    ${HOST}.${DOMAIN}
    n8n.${HOST}.${DOMAIN}
    s3.${HOST}.${DOMAIN};

  location /.well-known/acme-challenge/ {
    root /var/www/certbot;
  }

  # Optional: gib irgendwas zur√ºck, statt Redirect
  location / {
    return 200 "Certbot init mode - waiting for certificates\n";
    add_header Content-Type text/plain;
  }
}
